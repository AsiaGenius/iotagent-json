{
  "mqtt": {
    "host": "mqtt",
    "port" : 8883,
    "protocolId": "MQIsdp",
    "protocolVersion": 3,
    "secure": true,
    "tls": {
      "key": "certs/iotagent.key",
      "cert": "certs/iotagent.crt",
      "ca": [ "certs/ca.crt" ],
      "version": "TLSv1_2_method"
    }
  },
  "broker": {
    "host": "zookeeper:2181",
    "type": "kafka",
    "kafka": {
      "autoCommit": true,
      "fetchMaxWaitMs" : 1000,
      "fetchMaxBytes" : 1048576,
      "groupId" : "iotagent",
      "deviceNotificationTopic": [
        { "topic": "dojot.device-manager.device" }
      ]
    }
  },
  "device_manager": {
    "host": "device-manager:5000"
  }
}
